<Page x:Class="WPFGUI.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPFGUI"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid Background="#FF93D4C0">
        <Button x:Name="LoginButton" Content="Register" HorizontalAlignment="Left" Margin="349,178,0,0" VerticalAlignment="Top" Width="75" Click="Register_Click" />
        <Label Content="Username:" HorizontalAlignment="Left" Margin="229,122,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="UserText" HorizontalAlignment="Left" Height="23" Margin="304,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <Label x:Name="PasswordText" Content="" HorizontalAlignment="Left" Margin="229,148,0,0" VerticalAlignment="Top" Width="195" />
        <TextBlock HorizontalAlignment="Left" Margin="229,85,0,0" TextWrapping="Wrap" Text="Make yourself a username to get your password" VerticalAlignment="Top" Width="195" Height="32" />
    </Grid>
</Page>